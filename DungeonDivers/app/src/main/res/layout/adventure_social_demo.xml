<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/fragment4">

    <TextView
        android:id="@+id/socialHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:layout_weight="1"
        android:text="Friends"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/socialHeader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/TobiasView"
                android:layout_width="96dp"
                android:layout_height="96dp" />


            <TextView
                android:id="@+id/TobiasTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/TobiasView"
                android:layout_weight="1"
                android:text="  Tobias\n  Level 1\n  Mage Human"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />


            <ImageButton
            android:id="@+id/EpicWizardView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/TobiasView"/>

            <TextView
                android:id="@+id/EpicWizardTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/EpicWizardView"
                android:layout_below="@+id/TobiasTextView"
                android:layout_weight="1"
                android:text="  Epic Wizard\n  Level 1\n  Mage Elf"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/DungeonDiverView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/EpicWizardView"/>

            <TextView
                android:id="@+id/DungeonDiverTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/DungeonDiverView"
                android:layout_below="@+id/EpicWizardView"
                android:layout_weight="1"
                android:text="  Dungeon Diver\n  Level 1\n  Rogue Orc"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/AwesomeWarriorView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/DungeonDiverView"/>

            <TextView
                android:id="@+id/AwesomeWarriorTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/AwesomeWarriorView"
                android:layout_below="@+id/DungeonDiverTextView"
                android:layout_weight="1"
                android:text="  Awesome Warrior\n  Level 1\n  Warrior Human"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/PowerOrcView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/AwesomeWarriorView"/>

            <TextView
                android:id="@+id/PowerOrcTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/PowerOrcView"
                android:layout_below="@+id/AwesomeWarriorTextView"
                android:layout_weight="1"
                android:text="  Power Orc\n  Level 1\n  Warrior Orc"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/SneakyRogueView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/PowerOrcView"/>

            <TextView
                android:id="@+id/SneakyRogueTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/SneakyRogueView"
                android:layout_below="@+id/PowerOrcTextView"
                android:layout_weight="1"
                android:text="  Sneaky Rogue\n  Level 1\n  Rogue Human"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
            android:id="@+id/FireMageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/SneakyRogueView"/>

            <TextView
                android:id="@+id/FireMageTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/FireMageView"
                android:layout_below="@+id/SneakyRogueTextView"
                android:layout_weight="1"
                android:text="  Fire Mage\n  Level 1\n  Mage Orc"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/SlayerSamView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/FireMageView"/>

            <TextView
                android:id="@+id/SlayerSamTextView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/SlayerSamView"
                android:layout_below="@+id/FireMageTextView"
                android:layout_weight="1"
                android:text="  Sam The Slayer\n  Level 1\n  Warrior Elf"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />
